<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:weightSum="1">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_new_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#00998c"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_conversion_absoluteHeight="40dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_conversion_absoluteWidth="40dp" />


    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        tools:layout_conversion_absoluteHeight="563dp"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="600dp">

    </ListView>

</LinearLayout>